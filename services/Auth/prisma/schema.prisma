generator client {
  provider   = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  STUDENT
  TEACHER
  ACCOUNTANT
  ADMIN
}

enum UserStatus {
  ACTIVE
  BLOCKED
  DELETED
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

enum StudentStatus {
  ACTIVE
  SUSPENDED
  GRADUATED
}


model User {
  id         String     @id @default(uuid())
  email      String     @unique
  phone      String?    @unique
  password   String     @db.Text
  role       Role
  status     UserStatus @default(ACTIVE)

  failedAttempts Int       @default(0)
  lockedUntil    DateTime?

  createdAt   DateTime  @default(now())
  lastLoginAt DateTime?
  updatedAt   DateTime  @updatedAt
  deletedAt   DateTime?

  student Student?
  teacher Teacher?

  passwordResets PasswordResetToken[]

  @@index([role])
  @@map("users")
}

/**
 * ====================
 * STUDENT MODEL
 * ====================
 */

model Student {
  id            String        @id @default(uuid())
  userId        String        @unique
  studentCode   String        @unique
  firstName     String
  lastName      String
  gender        Gender
  dateOfBirth   DateTime
  admissionDate DateTime
  phone         String?
  address       String?
  status        StudentStatus @default(ACTIVE)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("students")
}


model Teacher {
  id            String   @id @default(uuid())
  userId        String   @unique
  teacherCode   String   @unique
  firstName     String
  lastName      String
  gender        Gender
  joiningDate   DateTime
  qualification String?
  experience    Int?
  salary        Decimal? @db.Decimal(10, 2)
  phone         String?
  address       String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("teachers")
}

model StudentCounter {
  id        Int    @id @default(1)
  year      Int
  sequence  Int    @default(0)
}


model PasswordResetToken {
  id        String   @id @default(uuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  isUsed    Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("password_reset_tokens")
}
